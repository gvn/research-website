{
  "name": "mozilla-research-website",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm-run-all --parallel server watch:**",
    "fetch": "npm-run-all fetch:**",
    "fetch:en-US": "curl http://localhost:31319/blob/en-US/research > source/json/en-US.json",
    "fetch:es-MX": "curl http://localhost:31319/blob/es-MX/research > source/json/es-MX.json",
    "build": "npm-run-all fetch:** && mkdirp dest && npm-run-all --parallel build:** copy:**",
    "build:jade:en-US": "jade --obj source/json/en-US.json source/index.jade -o dest/",
    "build:jade:es-MX": "jade --obj source/json/es-MX.json source/index.jade -o dest/es-MX/",
    "build:sass": "node-sass source/sass/main.sass dest/css/main.compiled.css && npm run autoprefix",
    "autoprefix": "postcss --use autoprefixer dest/css/main.compiled.css --output dest/css/main.compiled.prefixed.css",
    "server": "live-server ./dest --port=1979",
    "copy:images": "ncp source/images dest/images",
    "watch:jade": "chokidar 'source/**/*.jade' -c 'npm-run-all build:jade:**'",
    "watch:sass": "chokidar 'source/sass/main.sass' -c 'npm run build:sass'",
    "watch:images": "chokidar 'source/images/*' -c 'npm run copy:images'"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.2.3",
    "chokidar-cli": "^1.2.0",
    "jade": "^1.11.0",
    "live-server": "^0.9.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-sass": "^3.4.2",
    "npm-run-all": "^1.4.0",
    "postcss-cli": "^2.3.3"
  },
  "dependencies": {
    "mozilla-tabzilla": "0.5.1"
  }
}

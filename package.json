{
  "name": "mozilla-research-website",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "mkdirp dest && npm-run-all --parallel build:**",
    "build:static": "npm-run-all --parallel copy:**",
    "build:sass": "node-sass --source-map dest/css/main.css.map source/sass/main.sass dest/css/main.compiled.css",
    "server": "live-server ./dest --port=1979",
    "copy:images": "ncp source/images dest/images",
    "copy:html": "ncp source/index.html dest/index.html",
    "watch:html": "chokidar 'source/index.html' -c 'npm run copy:html'",
    "watch:sass": "chokidar 'source/sass/main.sass' -c 'npm run build:sass'"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "live-server": "^0.9.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.4.2",
    "npm-run-all": "^1.4.0"
  },
  "dependencies": {
    "mozilla-tabzilla": "0.5.1"
  }
}

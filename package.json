{
  "name": "mozilla-research-website",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm-run-all --parallel server watch:**",
    "build": "npm run include && mkdirp dest && npm-run-all --parallel build:** copy:**",
    "build:jade": "jade --obj source/dummy.json source/index.jade -o dest/ && jade source/cms -o dest/cms",
    "build:sass": "node-sass source/sass/main.sass dest/css/main.compiled.css && npm run autoprefix",
    "include": "ncp node_modules/json-editor/dist/jsoneditor.js source/cms/js/lib/jsoneditor.js",
    "autoprefix": "postcss --use autoprefixer dest/css/main.compiled.css --output dest/css/main.compiled.prefixed.css",
    "server": "live-server ./dest --port=1979",
    "copy:images": "ncp source/images dest/images",
    "copy:js": "mkdirp dest/cms/js/lib/ && ncp source/cms/js dest/cms/js",
    "watch:jade": "chokidar 'source/**/*.jade' -c 'npm run build:jade'",
    "watch:sass": "chokidar 'source/sass/main.sass' -c 'npm run build:sass'",
    "watch:images": "chokidar 'source/images/*' -c 'npm run copy:images'",
    "watch:js": "chokidar 'source/cms/js/**/*.js' -c 'npm run copy:js'",
    "watch:css": "chokidar 'source/cms/css/cms.css' -c 'npm run build:jade'"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.2.3",
    "chokidar-cli": "^1.2.0",
    "jade": "^1.11.0",
    "live-server": "^0.9.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-sass": "^3.4.2",
    "npm-run-all": "^1.4.0",
    "postcss-cli": "^2.3.3"
  },
  "dependencies": {
    "json-editor": "^0.7.23",
    "mozilla-tabzilla": "0.5.1"
  }
}
